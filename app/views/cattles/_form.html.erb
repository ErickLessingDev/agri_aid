<!-- app/views/cattles/_form.html.erb -->

<%= form_with(model: cattle, local: true) do |form| %>
    <div class="flex flex-col justify-center items-center w-full">
        <div class="mb-4">
            <%= form.label :eid, class: "block text-gray-700 text-sm font-bold mb-2" %>
            <%= form.text_field :eid, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
        </div>

        <div class="mb-4">
            <%= form.label :weight, class: "block text-gray-700 text-sm font-bold mb-2" %>
            <%= form.text_field :weight, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
        </div>

        <div class="mb-4  w-full">
            <%= form.label :birthdate, class: "block text-gray-700 text-sm font-bold mb-2  w-full" %>
            <%= form.date_field :birthdate, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
        </div>

        <div class="flex items-center justify-between  w-full">
            <%= form.submit "Save Changes", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 my-4 rounded  w-full focus:outline-none focus:shadow-outline" %>
        </div>
    </div>
<% end %>

