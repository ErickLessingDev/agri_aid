<!-- app/views/cattles/index.html.erb -->
<div class="flex flex-col mx-8 my-16 p-4 justify-center items-center bg-white rounded shadow">
  <h1 class="text-3xl font-bold mb-4">Cattle List</h1>
  <div class="my-4">
    <%= link_to "New Cattle", new_cattle_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
    <%= link_to "Download CSV Template", '/cattles/download_template', class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded"  %>
    <%= link_to "Upload CSV", '/cattles/upload_csv', class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>


  </div>
  <div class="overflow-x-auto">
    <table class="table-auto w-full">
      <thead>
        <tr>
          <th class="px-4 py-2">EID</th>
          <th class="px-4 py-2">Weight</th>
          <th class="px-4 py-2">Birthdate</th>
          <th class="px-4 py-2">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @cattles.each do |cattle| %>
          <tr>
            <td class="border px-4 py-2"><%= cattle.eid %></td>
            <td class="border px-4 py-2"><%= cattle.weight %></td>
            <td class="border px-4 py-2"><%= cattle.birthdate %></td>
            <td class="border px-4 py-2">
              <%= link_to "Weigh", new_weigh_cattle_path(cattle), class: "text-orange-500 hover:text-orange-700 mr-2" %>
              <%= link_to "View", cattle, class: "text-blue-500 hover:text-blue-700 mr-2" %>
              <%= link_to "Edit", edit_cattle_path(cattle), class: "text-green-500 hover:text-green-700 mr-2" %>
              <%= link_to("Delete", cattle_path(cattle), :method=> :delete, :data => { :confirm => "Are you sure you want to delete this cattle?" }, :class => "text-red-500 hover:text-red-700") %>
          </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
